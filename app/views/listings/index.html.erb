<p id="notice"><%= notice %></p>

<h1>Instrument Listings</h1>

<div class="index">
  <% @listings.each do |listing| %>
    <div class="card" style="width: 18rem;">
      <%= image_tag listing.picture, class: "card-img-top" if listing.picture.attached?%>
      <div class="card-body">
        <h5 class="card-title"><%= listing.name %></h5>
      </div>
      <div class="card-body">
      <%= link_to 'More details', listing %>
      <% if current_user && @user_id == listing.user_id %>
        <%= link_to 'Edit', edit_listing_path(listing) %></td>
        <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </div>
    </div>
  <% end %>
</div>


